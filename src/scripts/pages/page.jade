.reverse.bg-dark.header-offset.vh-50.relative(background-image="{{ page.featured_image_thumbnail_url }}" background-colour="{{ page.custom_meta.header_colour }}" header-height)
  .container.center-center
    h1(ng-bind-html="page.title.rendered") {{ page.title.rendered }}
    p.lead(ng-show="page.custom_meta.subheader") {{ page.custom_meta.subheader }}

section.section
  .container
    .row
      .col-lg-8.col-lg-push-2
        page(ng-bind-html="page.content.rendered") {{ page.content.rendered }}
