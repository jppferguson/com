meta-tags(title="Jamie Ferguson, Creative Developer" append-title="false" description="I specialise in crafting digital experiences.")
.page-header.reverse.bg-home.header-offset.vh-90.relative(header-height background-colour="dark" background-colour-header)
  .container.center-center
    h1.bold(ng-bind-html="indexPage.title.rendered")
    p.lead(ng-bind-html="indexPage.custom_meta.subheader | markdown")
    .pt-3: a.btn.btn-outline-primary(ui-sref="site.work.index") View some work I've done
  .center.bottom.p-2
    small.text-muted.sans or scroll for more
    .icon.icon-angle-double-down.animate-down

section.section.bg-dark.reverse
  .container
    .row
      .col-md-12
        h4.pb-3 Featured Case Studies
      .col-xs-12.col-md-6(ng-repeat="item in workItems | limitTo:featuredImages")
        .tile(background-colour="{{ item.custom_meta.header_colour }}")
          a.tile-link.non-text-link(ui-sref="site.work.post({slug: item.slug})")
          .tile-img(background-image="{{ item.featured_image_thumbnail_url }}" background-position="{{ item.custom_meta.header_focus }}")
          .tile-content
            h3(ng-bind-html="item.title.rendered") {{ item.title.rendered }}
            p(prevent-orphans) {{ item.custom_meta.subheader }}
    .row
      .col-md-12
        a.btn.btn-outline-primary(ui-sref="site.work.index") All Work


section.section.bg-light.bg-journal
  .container
    h4.pb-3 Recent Articles
    article.article-preview(ng-repeat="article in journalArticles")
      h2.display-3
        a(ui-sref="site.journal.post({slug: article.slug})" ng-bind-html="article.title.rendered" prevent-orphans)
      ul.article-meta
        li: date {{ article.date | date:format:'mediumDate' }}
        li {{ article.readingTime }}
        li
          a.tag(ng-repeat="tag in article.tags" ui-sref="site.journal.tag({tag: tag.name})" ng-show="article.tags[0]") \#{{tag.name}}
    a.btn.btn-outline-primary(ui-sref="site.journal.index") All Articles

section.section.bg-green.bg-profile.reverse
  .container
    h4.pb-3 Profile
    h2.display-3 I'm a kiwi
    div(ng-bind-html="profilePage.excerpt.rendered" page-content)
    a.btn.btn-outline-primary(ui-sref="site.profile") More about me
