section.section.bg-dark.reverse
  .container(ng-controller="WorkCtrl")
    .row
      .col-md-12
        h4.p-b-3 Featured Case Studies
      .col-xs-12.col-md-6(ng-repeat="item in items | limitTo:featuredImages" ng-hide="isLoading")
        .tile(background-colour="{{ item.custom_meta.header_colour }}")
          a.tile-link.non-text-link(ui-sref="site.work.post({slug: item.slug})")
          img.tile-img(ng-src="{{item.featured_image_thumbnail_url}}")
          .tile-content
            h3(ng-bind-html="item.title.rendered") {{ item.title.rendered }}
            p {{ item.custom_meta.subheader }}
    .row
      .col-md-12
        a.btn.btn-primary-outline(ui-sref="site.work.index") All Work


section.section.bg-light.bg-journal
  .container(ng-controller="JournalCtrl")
    h4.p-b-3 Recent Articles
    article.article-preview(ng-repeat="article in articles" ng-hide="isLoading")
      h2.display-3
        a(ui-sref="site.journal.post({slug: article.slug})" ng-bind-html="article.title.rendered" prevent-orphans) {{ article.title.rendered }}
      p.lead About a {{ article.readingTime }} read from
        = ' '
        em {{ article.date | date:format:'mediumDate' }}.
        a.tag(ng-repeat="tag in article.tags" ui-sref="site.journal.tag({tag: tag.name})" ng-show="article.tags[0]") \#{{tag.name}}
    a.btn.btn-primary-outline(ui-sref="site.journal.index") All Articles

section.section.bg-green.bg-profile.reverse
  .container(ng-controller="PageCtrl")
    h4.p-b-3 Profile
    h2.display-3 I'm a kiwi
    div(ng-bind-html="page.excerpt.rendered") {{ page.excerpt.rendered }}
    a.btn.btn-primary-outline(ui-sref="site.profile") More about me
