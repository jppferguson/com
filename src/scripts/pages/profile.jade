meta-tags(title="{{ page.title.rendered }}" description="{{ page.custom_meta.subheader }}" type="profile")
.page-header.reverse.header-offset.vh-50.relative.bg-profile(header-height background-colour="{{ page.custom_meta.header_colour }}" background-colour-header)
  .container.center-center
    h1(ng-bind-html="page.title.rendered")
    p.lead(ng-bind-html="page.custom_meta.subheader")
  .bottom
    .center-center
      img.profile-img.img-circle(src="/assets/img/jamie-ferguson.jpg")

section.section
  .container
    .row
      .col-lg-8.col-lg-push-2
        div(ng-bind-html="page.content.rendered") {{ page.content.rendered }}
