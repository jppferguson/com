.reverse.bg-green.header-offset.vh-50.relative
  .container.center-center(ng-hide="isLoading")
    h1(ng-bind-html="article.title.rendered") {{ article.title.rendered }}
    p.lead About a {{ article.readingTime }} read from
      = ' '
      em {{ article.date | date:format:'mediumDate' }}.
    a.tag(ng-repeat="tag in article.tags" ui-sref="site.journal.tag({tag: tag.name})" ng-show="article.tags[0]") \#{{tag.name}}

section.section
  .container
    .row
      .col-lg-8.col-lg-push-2(ng-hide="isLoading")
        article(ng-bind-html="article.content.rendered") {{article.content.rendered}}

    .row
      .col-sm-4
        a.btn.btn-sm.btn-primary(ui-sref="site.journal.post({ slug: article.adjacent_posts.prev.post_name })" ng-show="article.adjacent_posts.prev") &larr; Previous
      .col-sm-4.text-center
        a.btn.btn-sm.btn-primary(ui-sref="site.journal.index") All Articles
      .col-sm-4.text-right
        a.btn.btn-sm.btn-primary(ui-sref="site.journal.post({ slug: article.adjacent_posts.next.post_name })" ng-show="article.adjacent_posts.next") Next &rarr;
